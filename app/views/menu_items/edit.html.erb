<main class="SignUpPage">
  <p class="SignUp-login">
    Edit Item
  </p>
  <%= form_with url: menu_item_path, method: :patch, class: "signUp-form" do |form| %>
    <%= form.text_field :name,
                        placeholder: "Item Name",
                        value: @menu_item.name,
    %>
    <br>
    <%= form.number_field :price,
                          placeholder: "Price",
                          value: @menu_item.price,
                          class: "edit-item-price",
    %>
    <br>
    <%= form.text_field :description,
                         value: @menu_item.description,
                         placeholder: "Description"
    %>
    <br>
    <%= form.text_field :menu_name,
                        value: @menu_item.menu.name,
                        placeholder: "Menu Name"
    %>
    <br>
    <%= form.submit "Update", data: { "disable-with": "updating....." }, class: "signUp-button"%>
  <%end%>
</main>