<!DOCTYPE html>
<html>
  <head>
    <title>CafeteriaManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
    <div class="head-page">
    <nav class="navbar">
      <h2 class="navbarHeader">
      </h2>
      <ul class="navbarButtons">
        <% if @current_user %>
          <li class="navbarButton">
          
            <%= link_to "Home", menus_path %>
          </li>
          <% if @current_user.is_clerk? || @current_user.is_owner? %>
            <li class="navbarButton">

              <%= link_to "Pending Orders", pending_orders_path %>
            </li>
          <% end %>
          <% if @current_user.is_owner? %>
            <li class="navbarButton">
              <%= link_to "All Orders", all_orders_path %>
            </li>
          <% end %>
          <li class="navbarButton">

            <%= link_to "Orders", orders_path %>
          </li>
          <li class="navbarButton">

            <%= link_to "Cart", cart_path %>
          </li>
          <li class="navbarButton">

            <%= link_to "LogOut", destroy_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="navbarButton">

            <%= link_to "Sign In", new_session_path %>
          </li>
          <li class="navbarButton">

            <%= link_to "Sign Up", new_user_path %>
          </li>
        <% end %>
      </ul>
    </nav>
     <div class="Search">
       <h3>Order Online</h3>
       <section class="Food-Icons">
       </section>
       <%= yield :head %>
     </div>
      <% if flash.alert %>
       <p class="alert"><%= alert %></p>
      <% end %>
      <% if flash[:error] %>
       <div id="error_string">
        <h2>
          <%= pluralize(flash[:error].count, "error") %> FORM not allowed to be saved:
        </h2>
        <ul>
          <% flash[:error].each_with_index do |msg, index| %>
            <li class="error-msg"><%= "#{index + 1}.#{msg}" %></li>
          <% end %>
        </ul>
       </div>
      <% end %>
  </div>
       <%= yield %>
       
  </body>
</html>
